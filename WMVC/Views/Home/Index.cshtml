@{
    ViewData["Title"] = "Homepage";
    HttpContextAccessor httpContextAccessor = new();
    bool isAuthenticated = httpContextAccessor.HttpContext!.User.Claims.Any();
    if (isAuthenticated == false)
    {
        Layout = null;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Müşteri Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>
    @if (!isAuthenticated)
    {
        <div class="start">
            <div class="welcome-box">
                <h1>Hoş geldiniz</h1>
                <a class="btn btn-outline-dark mx-1" asp-area="" asp-controller="Auth" asp-action="Login">Giriş Yap</a>
            </div>
        </div>
    }

    @if (isAuthenticated)
    {
        <div class="container">
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-5 main-content">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <i class="bi bi-person-check"></i>
                                <h5 class="card-title">Müşteri Yönetimi</h5>
                                <p class="card-text">Müşterileri ekleyin, düzenleyin ve silin.</p>
                                <a asp-controller="customers" asp-action="Index" class="btn btn1">Detaylar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <i class="bi bi-box-seam"></i>
                                <h5 class="card-title">Ürün Yönetimi</h5>
                                <p class="card-text">Ürün ekleyin, güncelleyin ve stokları yönetin.</p>
                                <a asp-controller="products" asp-action="Index" class="btn btn1">Detaylar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <i class="bi bi-bar-chart"></i>
                                <h5 class="card-title">Raporlar</h5>
                                <p class="card-text">Çeşitli raporlar oluşturun ve analiz edin.</p>
                                <a href="#" class="btn btn1">Detaylar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <i class="bi bi-cart3"></i>
                                <h5 class="card-title">Satış Yönetimi</h5>
                                <p class="card-text">Satışları görüntüleyin, yönetin ve ilgilenin.</p>
                                <a href="#" class="btn btn1">Detaylar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <i class="bi bi-file-earmark-text"></i>
                                <h5 class="card-title">Teklif ve Fatura Yönetimi</h5>
                                <p class="card-text">Teklifleri ve faturaları yönetin.</p>
                                <a href="#" class="btn btn1">Detaylar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <i class="bi bi-person-lines-fill"></i>
                                <h5 class="card-title">Kullanıcı ve Rol Yönetimi</h5>
                                <p class="card-text">Kullanıcı rollerini ve izinlerini yönetin.</p>
                                <a href="#" class="btn btn1">Detaylar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>